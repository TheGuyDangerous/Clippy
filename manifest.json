{
  "manifest_version": 3,
  "name": "Clippy",
  "version": "1.0",
  "description": "The best clipboard extension ever",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel",
    "clipboardRead",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/16.png",
      "48": "assets/48.png",
      "128": "assets/128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "open_side_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z"
      },
      "description": "Open side panel"
    },
    "locate_element": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Start locate element function"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "assets/16.png",
    "48": "assets/48.png",
    "128": "assets/128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}